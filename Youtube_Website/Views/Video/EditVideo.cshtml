@model Youtube_Website.Models.Video
@{
    var getmyvideos = (List<Youtube_Website.Models.Video>)ViewBag.myvideo;
    if (Convert.ToInt32(ViewBag.VideoIDGet) < 0)
    { ViewBag.VideoIDGet = 0; }
    int id = Convert.ToInt32(ViewBag.VideoIDGet);
    Layout = null;
    bool IsUserLoggedIn = Session["email"] == null;
}

<!DOCTYPE html>
<html>

<link rel="icon" type="image/png" href="~/Assets/input_video_images/icons/favicon.ico" />
<link rel="stylesheet" type="text/css" href="~/Assets/input_video_fonts/font-awesome-4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" type="text/css" href="~/Assets/input_video_css/util.css">
<link rel="stylesheet" type="text/css" href="~/Assets/input_video_css/main.css">

<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<title>Upload Video</title>
<meta name="viewport" content="width=device-width, initial-scale=1">
<meta name="description" content="Free HTML5 Template by FREEHTML5.CO" />
<meta name="keywords" content="free html5, free template, free bootstrap, html5, css3, mobile first, responsive" />
<meta name="author" content="FREEHTML5.CO" />

<meta property="og:title" content="" />
<meta property="og:image" content="" />
<meta property="og:url" content="" />
<meta property="og:site_name" content="" />
<meta property="og:description" content="" />
<meta name="twitter:title" content="" />
<meta name="twitter:image" content="" />
<meta name="twitter:url" content="" />
<meta name="twitter:card" content="" />

<link rel="shortcut icon" href="favicon.ico">
<link href='http://fonts.googleapis.com/css?family=Playfair+Display:400,700,400italic|Roboto:400,300,700' rel='stylesheet' type='text/css'>
<link rel="stylesheet" href="~/Assets/Homepagevideotemplate/css/animate.css">
<link rel="stylesheet" href="~/Assets/Homepagevideotemplate/css/icomoon.css">
<link rel="stylesheet" href="~/Assets/Homepagevideotemplate/css/bootstrap.css">

<link rel="stylesheet" href="~/Assets/Homepagevideotemplate/css/style.css">

<script src="js/modernizr-2.6.2.min.js"></script>

<style>
    #fh5co-header {
        padding: 1em 1em;
    }

        #fh5co-header .fh5co-nav-toggle {
            top: 1em;
        }

    h1, .h1, h2, .h2, h3, .h3 {
        margin-top: 5px;
        margin-bottom: 30px;
    }

    #fh5co-header .fh5co-social {
        position: absolute !important;
        right: 3em !important;
        top: 0px;
        z-index: 99;
        -webkit-transition: 0.5s;
        -o-transition: 0.5s;
        transition: 0.5s;
        display: none;
    }

    .wrap-contact2 {
        width: 530px;
        background: rgba(219,21,99,0.8);
        background: -webkit-linear-gradient( 45deg, rgba(213,0,125,0.8), rgba(229,57,53,0.8));
        background: -o-linear-gradient(45deg, rgba(213,0,125,0.8), rgba(229,57,53,0.8));
        background: -moz-linear-gradient(45deg, rgba(213,0,125,0.8), rgba(229,57,53,0.8));
        background: linear-gradient( 45deg, rgb(255 255 255 / 80%), rgb(255 255 255 / 80%));
    }

    .container-contact2 {
        background: rgba(219,21,99,0.8);
        background: -webkit-linear-gradient( 45deg, rgba(213,0,125,0.8), rgba(229,57,53,0.8));
        background: -o-linear-gradient(45deg, rgba(213,0,125,0.8), rgba(229,57,53,0.8));
        background: -moz-linear-gradient(45deg, rgba(213,0,125,0.8), rgba(229,57,53,0.8));
        background: linear-gradient( 45deg, rgb(255 255 255 / 80%), rgb(255 255 255 / 80%));
    }

    button.contact2-form-btn {
        background-color: #000;
    }
</style>

</head>
<body>
    <div id="fh5co-offcanvas">
        <a href="#" class="fh5co-close-offcanvas js-fh5co-close-offcanvas"><span><i class="icon-cross3"></i> <span>Close</span></span></a>
        <div class="fh5co-bio">
            <figure>
                <img src="~/Assets/Homepagevideotemplate/images/person1.jpg" alt="Free HTML5 Bootstrap Template" class="img-responsive">
            </figure>
            <h3 class="heading">About Me</h3>
            <h2>@*@Session["email"]*@</h2>
            <p>Far far away, behind the word mountains, far from the countries Vokalia and Consonantia, there live the blind texts. </p>
            <ul class="fh5co-social">
                <li><a href="#"><i class="icon-twitter"></i></a></li>
                <li><a href="#"><i class="icon-facebook"></i></a></li>
                <li><a href="#"><i class="icon-instagram"></i></a></li>
            </ul>
        </div>

        <div class="fh5co-menu">
            <h3 style="color: orange;">Your Account</h3>
            <div class="fh5co-box">

                <h3 class="heading">@Session["name"]</h3>
                <ul>
                    @if (IsUserLoggedIn)
                    {
                        <li><a href="/User/SignIn/">Signin</a></li>
                        <li><a href="/User/SignUp/">Signup</a></li>
                    }
                    else
                    {
                        <li><a href="/Home/Index/">Home</a></li>
                        <li><a href="/Video/MyVideos/">My Videos</a></li>
                        <li><a href="/User/updateUserInfo/">Settings</a></li>
                        <li><a href="/User/Logout">Logout</a></li>
                        <li><button><a href="/Video/Upload/">Upload Video</a></button></li>
                    }
                </ul>
            </div>
            <div class="fh5co-box">
                <h3 class="heading">Search</h3>
                <form action="#">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Type a keyword">
                    </div>
                </form>
            </div>
        </div>
    </div>
    <header id="fh5co-header">

        <div class="container-fluid">

            <div class="row">
                <a href="#" class="js-fh5co-nav-toggle fh5co-nav-toggle"><i></i></a>
                <ul class="fh5co-social">
                    <li><a href="#"><i class="icon-twitter"></i></a></li>
                    <li><a href="#"><i class="icon-facebook"></i></a></li>
                    <li><a href="#"><i class="icon-instagram"></i></a></li>
                </ul>
                <div class="col-lg-12 col-md-12 text-center">
                    <h1 id="fh5co-logo"><a href="index.html"> Update Your Video<sup>TM</sup></a></h1>
                </div>
            </div>
        </div>

    </header>
    <a href="/Home/index/" class="fh5co-post-prev"><span><i class="icon-chevron-left"></i> Prev</span></a>
    <a href="#" class="fh5co-post-next"><span>Next <i class="icon-chevron-right"></i></span></a>

    <div class="container-contact2">
        <div class="wrap-contact2">
            <form class="contact2-form validate-form" method="post">
                <span class="contact2-form-title">
                    Edit Your Video
                </span>
                <input class="input2" type="hidden" name="id" value="@getmyvideos[id].id" />

                <div class="wrap-input2 validate-input" data-validate="Title is required">

                    <input class="input2" type="text" name="title" value="@getmyvideos[id].title" required/>
                    <span class="focus-input2"></span>
                </div>

                <div class="wrap-input2 validate-input" data-validate="Description is required">
                    <input class="input2" type="text" name="description" value="@getmyvideos[id].description" required/>
                    <span class="focus-input2"></span>
                </div>

                <div class="wrap-input2 validate-input" data-validate="Video Source is required">
                    <input type="text" class="input2" name="source" value="@getmyvideos[id].source" required/>
                    <span class="focus-input2"></span>
                </div>

                <div class="container-contact2-form-btn">
                    <div class="wrap-contact2-form-btn">
                        <div class="contact2-form-bgbtn"></div>
                        <button class="contact2-form-btn" type="submit" formaction="/Video/CheckUpdateVideo/">
                            Update Video
                        </button>
                    </div>
                </div>

                <div class="container-contact2-form-btn">
                    <div class="wrap-contact2-form-btn">
                        <div class="contact2-form-bgbtn"></div>
                        <button class="contact2-form-btn" type="submit" formaction="/Video/CheckDeleteVideo/">
                            Delete Video
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <script src="~/Assets/Homepagevideotemplate/js/jquery.min.js"></script>
    <script src="~/Assets/Homepagevideotemplate/js/jquery.easing.1.3.js"></script>
    <script src="~/Assets/Homepagevideotemplate/js/bootstrap.min.js"></script>
    <script src="~/Assets/Homepagevideotemplate/js/jquery.waypoints.min.js"></script>
    <script src="~/Assets/Homepagevideotemplate/js/main.js"></script>
</body>
</html>